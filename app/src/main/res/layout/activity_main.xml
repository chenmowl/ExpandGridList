<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xbm.expandgridlist.MainActivity">

    <TextView
        android:id="@+id/way_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方式1"
        android:textColor="#232323"
        android:textSize="24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/way_one" />

    <TextView
        android:id="@+id/way_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="方式2"
        android:textColor="#232323"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/way_two" />


</android.support.constraint.ConstraintLayout>
